## XF86, F1-12, and 0-9 Keys ##
# $mod+1-0
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# $mod+Shift+1-0
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# F1-12
bindsym F1 [class="Firefox"] focus
bindsym F4 workspace back_and_forth

# $mod+F1-12
bindsym $mod+F1 exec --no-startup-id pactl set-sink-mute 0 toggle
bindsym $mod+F2 exec --no-startup-id pactl set-sink-volume 0 -1%
bindsym $mod+F3 exec --no-startup-id pactl set-sink-volume 0 +1%

bindsym $mod+F5 exec light -U 2
bindsym $mod+F6 exec light -A 2

bindsym $mod+F9 exec $term -e ncmpcpp

bindsym $mod+F10 exec mpc -p 6601 prev
bindsym $mod+F11 exec mpc -p 6601 toggle
bindsym $mod+F12 exec mpc -p 6601 next

# XF86
bindsym XF86AudioPrev exec mpc -p 6601 prev
bindsym XF86AudioPause exec mpc -p 6601 toggle
bindsym XF86AudioNext exec mpc -p 6601 next

bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +1%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -1%

bindsym XF86HomePage exec firefox

bindsym XF86Mail exec $term -e neomutt

bindsym XF86MyComputer exec $term -e ranger

bindsym XF86Calculator exec $term -e python3

# mpc seek forwards/backwards
bindsym $mod+0x2e exec mpc -p 6601 seek +1%
bindsym $mod+0x2c exec mpc -p 6601 seek -1%



## i3's bars ##
#i3 borders
client.focused #50A6C9 #50A6C9 #50A6C9 #50A6C9
#i3blocks colors and position
bar {
	position top
	status_command i3blocks -c .config/i3blocks/config
	colors {
		separator #FFFFFF
		background #000000
		statusline #FFFFFF

				 #outline   #bg    #font
		focused_workspace #000000 #000000 #50A6C9
		active_workspace #000000 #000000 #50A6C9
		inactive_workspace #50A6C9 #000000 #50A6C9
		urgent_workspace #50A6C9 #000000 #9C6A05
		}
	}
