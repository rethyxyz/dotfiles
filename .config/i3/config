###---Other Keyboard Keys---###
#BackSpace
#bindsym $mod+BackSpace exec 
bindsym $mod+Shift+BackSpace exec reboot
#bindsym $mod+Ctrl+BackSpace exec
#bindsym $mod+Mod1+BackSpace exec
# Return
bindsym $mod+Return exec $term
#bindsym $mod+Shift+Return exec sudo poweroff
#bindsym $mod+Ctrl+Return exec 
#bindsym $mod+Mod1+Return exec 
#Tab
bindsym $mod+Tab workspace back_and_forth
#Minus
bindsym $mod+minus gaps inner current plus 1
bindsym $mod+Shift+minus gaps inner current minus 1

###---XF86, F1-12, and 0-9 keys---###
#Volume up/down/mute
bindsym $mod+F1 exec --no-startup-id pactl set-sink-mute 0 toggle
bindsym $mod+F2 exec --no-startup-id pactl set-sink-volume 0 -1%
bindsym $mod+F3 exec --no-startup-id pactl set-sink-volume 0 +1%
#Brightness keybindings
bindsym $mod+F5 exec light -U 2
bindsym $mod+F6 exec light -A 2
#Ncmpcpp
bindsym $mod+F9 exec $term -e ncmpcpp
#mpc next/toggle/prev
bindsym $mod+F10 exec mpc -p 6601 prev
bindsym $mod+F11 exec mpc -p 6601 toggle
bindsym $mod+F12 exec mpc -p 6601 next
#mpc seek forwards/backwards
bindsym $mod+0x2e exec mpc -p 6601 seek +1%
bindsym $mod+0x2c exec mpc -p 6601 seek -1%
#Newsboat
bindsym XF86HomePage exec urxvt -e newsboat
#Switch workspaces
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10
#Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10
#mutt
#bindsym XF86MyComputer exec urxvt -e neomutt
#calcurse
bindsym XF86Calculator exec urxvt -e calcurse

