# LOAD THESE FIRST, NOT LAST
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K

# General settings
auto-reload yes

browser "/usr/bin/qutebrowser %u"

# Macros
macro m set browser "/usr/bin/mpv %u"; open-in-browser; set browser "/usr/bin/qutebrowser %u";
macro b open-in-browser;
macro d set browser "cd ~/vids/; /usr/bin/youtube-dl --format mp4 %u && /usr/bin/mpv %u"; open-in-browser; set browser "/usr/bin/qutebrowser %u";

# Keybindings: Vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit

bind-key u pageup
bind-key d pagedown

bind-key G end
bind-key g home

# highlights
highlight article "^(Title):.*$" blue default
highlight article "https?://[^ ]+" red default
highlight article "\\[image\\ [0-9]+\\]" green default
